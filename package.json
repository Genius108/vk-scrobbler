{
  "name": "vk-scrobbler",
  "version": "1.1.0",
  "description": "Last.fm Scrobbler for vk.com",
  "config": {
    "src": "blocks",
    "dist": "dist"
  },
  "scripts": {
    "precopy": "rm -rf $npm_package_config_dist/*",
    "watch": "rm -rf $npm_package_config_dist/* && gulp watch-copy",
    "copy": "gulp copy",
    "pack": "cd $npm_package_config_dist && zip -r -X ../vk-scrobbler-$npm_package_version.zip ./*",
    "prebuild": "npm run lint",
    "build": "npm run copy && npm run pack",
    "start": "npm run watch",
    "test": "node ./node_modules/karma/bin/karma start",
    "lint": "jshint $npm_package_config_src/*"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/huston007/vk-scrobbler.git"
  },
  "keywords": [
    "vk.com",
    "last.fm",
    "scrobbler"
  ],
  "author": "Andrey Skladchikov",
  "license": "ISC",
  "dependencies": {
    "js-md5": "0.3.0"
  },
  "devDependencies": {
    "chai": "^2.3.0",
    "gulp": "^3.8.11",
    "gulp-watch": "^4.2.4",
    "jshint": "^2.7.0",
    "karma": "^0.12.32",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^0.1.12",
    "karma-coverage": "^0.3.1",
    "karma-coveralls": "^1.0.1",
    "karma-mocha": "^0.1.10",
    "karma-sinon-chai": "^0.3.0",
    "mocha": "^2.2.5",
    "sinon": "^1.14.1",
    "sinon-chrome": "^0.1.1"
  }
}
