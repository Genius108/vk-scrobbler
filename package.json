{
  "name": "vk-scrobbler",
  "version": "2.0.2",
  "description": "Last.fm Scrobbler for vk.com",
  "config": {
    "src": "blocks",
    "dist": "dist"
  },
  "scripts": {
    "precopy": "rm -rf $npm_package_config_dist/*",
    "watch": "rm -rf $npm_package_config_dist/* && gulp watch-copy",
    "copy": "gulp copy",
    "pack": "cd $npm_package_config_dist && zip -r -X ../vk-scrobbler-$npm_package_version.zip ./*",
    "prebuild": "npm run lint",
    "build": "npm run copy && npm run pack",
    "start": "npm run watch",
    "test": "node ./node_modules/karma/bin/karma start",
    "lint": "jshint $npm_package_config_src/*"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/huston007/vk-scrobbler.git"
  },
  "keywords": [
    "vk.com",
    "last.fm",
    "scrobbler"
  ],
  "author": "Andrey Skladchikov",
  "license": "ISC",
  "dependencies": {
    "js-md5": "0.3.0"
  },
  "devDependencies": {
    "chai": "3.5.0",
    "codecov.io": "^0.1.2",
    "electron-prebuilt": "^0.37.6",
    "gulp": "^3.8.11",
    "gulp-watch": "^4.2.4",
    "jshint": "^2.7.0",
    "karma": "^0.13.22",
    "karma-chrome-launcher": "^0.2",
    "karma-coverage": "0.5.5",
    "karma-electron-launcher": "^0.1.0",
    "karma-mocha": "^0.2",
    "karma-sinon": "1.0",
    "karma-sinon-chai": "1.2.0",
    "mocha": "^2.2.5",
    "sinon": "^1.15.4",
    "sinon-chai": "2.8.0",
    "sinon-chrome": "0.1.2"
  }
}
