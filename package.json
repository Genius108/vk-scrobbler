{
  "name": "vk-scrobbler",
  "version": "1.0.5",
  "description": "Last.fm Scrobbler for vk.com",
  "scripts": {
    "precopy": "rm -rf dist/*",
    "watch": "rm -rf dist/* && gulp watch-copy",
    "copy": "gulp copy",
    "pack": "cd dist && zip -r -X vk-scrobbler.zip ./*",
    "read-version": "cat manifest.json | grep '\"version\"' | sed 's/[^0-9\\.]//g'",
    "build": "npm run copy && npm run pack",

    "start": "npm run watch",
    "test": "karma start"
  },
  "keywords": [
    "vk.com",
    "last.fm",
    "scrobbler"
  ],
  "author": "Andrey Skladchikov",
  "license": "ISC",
  "dependencies": {
    "js-md5": "0.3.0"
  },
  "devDependencies": {
    "chai": "^2.3.0",
    "gulp": "^3.8.11",
    "gulp-watch": "^4.2.4",
    "karma": "^0.12.32",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^0.1.12",
    "karma-mocha": "^0.1.10",
    "karma-sinon-chai": "^0.3.0",
    "mocha": "^2.2.5"
  }
}
